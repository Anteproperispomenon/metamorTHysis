# This is a simple Latin orthography
# for Inuktitut. 
orthography : inuktitut_syllabics
phoneme set : "../phonemes/example_inuktitut.thyt"


====

# No classes or states.

====

# Source : https://en.wikipedia.org/wiki/Inuktitut_syllabics

# Vowels

a short : a
a short : ă
a short : a U+0306
a long  : a a
a long  : ā
a long  : a U+0304
i short : i
i short : ĭ
i short : i U+0306
i long  : i i
i long  : ī
i long  : i U+0304
u short : u
u short : ŭ
u short : u U+0306
u long  : u u
u long  : ū
u long  : u U+0304
ai : a i
ai : e

# Consonants

p  : p
t  : t
k  : k
h  : h
g  : g
m  : m
n  : n
s' : ŝ # s/h
s' : s U+0302

l  : l
j  : j
jj : j j
rh : ř # U+0159
rh : U+0072 U+030C
v  : v 
r  : r
q  : q
qq : q q

ng  : n g
ng  : ŋ
nng : n n g

lh : ł
lh : - ɬ
lh : + Ɬ # U+A7AD

glot : '
glot : ʔ

shr : š
# H-circumflex
h'  : U+0125
h'  : U+0068 U+0302

# I don't know how commonly used
# the "hx" phoneme is, since it
# only seems to be used as a final
# character. Using h-wedge to represent it.
hx : U+0068 U+030C

